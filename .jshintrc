{
    "node": true,
    "browser": true,
    "esnext": true,
    "bitwise": true,
    "eqeqeq": true,
    "camelcase": true,
    "curly": true,
    "immed": true,
    "indent": 4,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "quotmark": "single",
    "regexp": true,
    "undef": true,
    "unused": true,
    "strict": true,
    "trailing": true,
    "smarttabs": true,
    "jquery": true,
    "globals": {
        "require": true,
        "module": true,
        "_": true,
        "Backbone": true,
        "define": true,
        "DEBUG": true,
        "alert": true
